{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"   // <- ESTA LÍNEA ES IMPORTANTE
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "lib/supabaseClient.js"],
  "exclude": ["node_modules"]
}
